<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<% Brand.all.each do |b| %>
  <%= link_to b.name, cars_path(:brand_id => b.id)%> |
  <% end -%>

<% Classification.all.each do |c| %>
  <%= link_to c.name, cars_path(:classification => c.id)%> |
  <% end -%>

<% Structure.all.each do |s| %>
  <%= link_to s.name, cars_path(:structure => s.id)%> |
  <% end -%>

<table>
  <thead>
    <tr>
      <th>Nro. puertas</th>
      <th>Color</th>
      <th>Modelo</th>
      <th>Año</th>
      <th>Marca</th>
      <th>Clasificación</th>
      <th>Estructura</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.doors %></td>
        <td><%= car.color %></td>
        <td><%= car.model %></td>
        <td><%= car.year %></td>
        <td><%= car.brand.name unless car.brand.nil? %></td>
        <td><%= car.classification.name unless car.classification.nil? %></td>
        <td><%= car.structure.name unless car.structure.nil? %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path %>
